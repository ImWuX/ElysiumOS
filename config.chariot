host/gcc {
    source: gcc
    dependencies [ *host/binutils host/automake host/libtool host/pkgconf target/mlibc_headers ]
    configure {
        CFLAGS="-O2" CXXFLAGS="-O2" @(source_dir)/configure \
            --prefix=@(prefix) \
            --target=x86_64-elysium \
            --with-sysroot=@(sysroot_dir) \
            --enable-languages=c,c++,lto \
            --disable-nls \
            --disable-multilib \
            --enable-initfini-array \
            --enable-shared \
            --enable-host-shared
    }
    build {
        make -j@(thread_count) all-gcc
    }
    install {
        DESTDIR=@(install_dir) make install-gcc
    }
}

host/libgcc {
    source: gcc
    dependencies [ host/gcc host/automake host/libtool host/pkgconf target/mlibc target/mlibc_headers ]
    configure {
        CFLAGS="-O2" CXXFLAGS="-O2" @(source_dir)/configure \
            --prefix=@(prefix) \
            --target=x86_64-elysium \
            --with-sysroot=@(sysroot_dir) \
            --enable-languages=c,c++,lto \
            --disable-nls \
            --disable-multilib \
            --enable-initfini-array \
            --enable-shared \
            --enable-host-shared
    }
    build {
        make -j@(thread_count) all-target-libgcc
    }
    install {
        DESTDIR=@(install_dir) make install-strip-target-libgcc
    }
}

host/libstdcpp {
    source: gcc
    dependencies [ host/gcc host/automake host/libtool host/pkgconf target/mlibc target/mlibc_headers host/libgcc ]
    configure {
        CFLAGS="-O2" CXXFLAGS="-O2" @(source_dir)/configure \
            --prefix=@(prefix) \
            --target=x86_64-elysium \
            --with-sysroot=@(sysroot_dir) \
            --enable-languages=c,c++,lto \
            --disable-nls \
            --disable-multilib \
            --enable-initfini-array \
            --enable-shared \
            --enable-host-shared
    }
    build {
        make -j@(thread_count) all-target-libstdc++-v3
    }
    install {
        DESTDIR=@(install_dir) make install-strip-target-libstdc++-v3
    }
}

